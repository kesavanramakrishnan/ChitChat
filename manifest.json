{
  "manifest_version": 3,
  "name": "ChitChat",
  "description": "Enhances prompt writing on ChatGPT with real-time prompt evaluations and suggestions",
  "version": "1.0",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "js": [
        "config.js",
        "js/content.js"
      ],
      "css": [
        "css/style.css"
      ]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
} 